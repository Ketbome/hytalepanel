{
  "name": "hytale-panel",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm --dir backend dev\" \"pnpm --dir frontend dev\"",
    "build": "pnpm --dir backend build && pnpm --dir frontend build",
    "build:backend": "pnpm --dir backend build",
    "build:frontend": "pnpm --dir frontend build",
    "start": "pnpm --dir backend start",
    "check": "pnpm --dir backend check && pnpm --dir frontend check",
    "lint": "pnpm --dir backend lint && pnpm --dir frontend lint",
    "lint:fix": "pnpm --dir backend lint:fix && pnpm --dir frontend lint:fix",
    "test": "pnpm --dir backend test",
    "knip": "pnpm --dir frontend knip"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@eslint/js": "^9.39.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-svelte": "^3.14.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.0.0",
    "svelte": "^5.48.2",
    "typescript-eslint": "^8.53.1"
  }
}
